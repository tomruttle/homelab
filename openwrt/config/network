config interface 'loopback'
	option device 'lo'
	option proto 'static'
	option ipaddr '127.0.0.1'
	option netmask '255.0.0.0'

config globals 'globals'
	option ula_prefix 'fda7:da20:0575::/48'

config device
	option name 'eth1'
	option macaddr '2c:c8:1b:f8:5c:2a'

config interface 'wan'
	option device 'eth1'
	option proto 'dhcp'

config interface 'wan6'
	option device 'eth1'
	option proto 'dhcpv6'
	option auto '0'
	option reqaddress 'try'
	option reqprefix 'auto'

config device
	option name 'eth0'
	option macaddr '2c:c8:1b:f8:5c:2b'

config device
	option name 'br-lan'
	option type 'bridge'
	list ports 'eth0'

config device
	option name 'br-int'
	option type 'bridge'
	list ports 'eth0.10'

config device
	option name 'br-dmz'
	option type 'bridge'
	list ports 'eth0.11'

config device
	option name 'br-iot'
	option type 'bridge'
	list ports 'eth0.12'

config interface 'lan'
	option device 'br-lan'
	option proto 'static'
	option ipaddr '192.168.1.1'
	option netmask '255.255.255.0'
	option ip6assign '60'

config interface 'int'
	option proto 'static'
	option device 'br-int'
	option ipaddr '192.168.10.1'
	option netmask '255.255.255.0'

config interface 'dmz'
	option proto 'static'
	option device 'br-dmz'
	option ipaddr '192.168.11.1'
	option netmask '255.255.255.0'

config interface 'iot'
	option proto 'static'
	option device 'br-iot'
	option ipaddr '192.168.12.1'
	option netmask '255.255.255.0'

config switch
	option name 'switch0'
	option reset '1'
	option enable_vlan '1'

config switch_vlan
	option device 'switch0'
	option vlan '1'
	option vid '1'
	option ports '0t 1'

config switch_vlan
	option device 'switch0'
	option vlan '10'
	option vid '10'
	option description 'INT'
	option ports '0t 4 3t'

config switch_vlan
	option device 'switch0'
	option vlan '11'
	option vid '11'
	option description 'DMZ'
	option ports '0t 3t'

config switch_vlan
	option device 'switch0'
	option vlan '12'
	option vid '12'
	option description 'IOT'
	option ports '0t 2'